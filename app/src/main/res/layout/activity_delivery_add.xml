<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Delivery.DeliveryAdd"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/yas_layer13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/yas_back_viewDeilivery3III"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/back_left"
                />

            <ImageView
                android:id="@+id/yas_imgViewDelivery3"
                android:layout_width="160dp"
                android:layout_height="80dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/store_logo"
                />


        </LinearLayout>

        <TextView
            android:id="@+id/yas_searchText44"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="110dp"
            android:text="Receiver Info"
            android:textColor="#FFFFFF"
            android:textSize="35dp"
            android:textStyle="bold"
            />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="80dp"
            android:layout_below="@+id/yas_searchText44"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="638dp"
                android:layout_below="@+id/yas_l1"
                android:layout_marginTop="1dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/yas_searchText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="10dp"
                    android:text="Name"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/yas_editTextTextPersonName2"
                    android:layout_width="372dp"
                    android:layout_height="56dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/round_border"
                    android:inputType="textMultiLine"
                    android:padding="14dp"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/yas_searchText3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="16dp"
                    android:text="Telephone No"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/yas_editTextTextPersonName6"
                    android:layout_width="372dp"
                    android:layout_height="56dp"

                    android:layout_marginTop="8dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/round_border"
                    android:inputType="textMultiLine"
                    android:padding="14dp"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/yas_searchText4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="24dp"
                    android:text="Message"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/yas_editTextTextPersonName5"
                    android:layout_width="375dp"
                    android:layout_height="240dp"
                    android:layout_above="@+id/yas_addReviewBtn2"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="54dp"
                    android:background="@drawable/round_border"
                    android:inputType="textMultiLine"
                    android:padding="14dp"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/yas_addReviewBtn2"
                    android:layout_width="132dp"
                    android:layout_height="47dp"
                    android:layout_marginStart="139dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="139dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="15dp"
                    android:background="@drawable/yas_button"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:text="CONTINUE"
                    android:textColor="@color/white" />
            </LinearLayout>


        </ScrollView>




    </RelativeLayout>

</LinearLayout>