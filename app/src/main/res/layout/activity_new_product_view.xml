<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewProductView"
    android:layout_margin="10dp">

    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:id="@+id/layer13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/back_new_item"
                android:layout_marginTop="20dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/back_left"/>

            <ImageView

                android:layout_marginLeft="60dp"
                android:layout_width="160dp"
                android:layout_height="80dp"
                android:src="@drawable/store_logo"/>
        </LinearLayout>
        <EditText
            android:id="@+id/searchNewProduct"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:hint="Search"
            android:layout_below="@+id/layer13"
            android:background="@drawable/search"
            android:drawableStart="@drawable/search_img"
            android:padding="10dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_below="@+id/searchNewProduct"
            android:id="@+id/card_recycleNewProductView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.recyclerview.widget.RecyclerView>
    </RelativeLayout>

</ScrollView>