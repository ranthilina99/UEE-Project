<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/draw_yas2"
    tools:context=".Review.ReviewPopupUpdate"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/yas_reviewPopupUpdateCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="280dp"
        android:background="#ffffff"
        app:srcCompat="@drawable/ic_baseline_cancel_24" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        >

        <TextView
            android:id="@+id/yas_searchText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="35dp"
            android:text="Rating"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />


        <RatingBar
            android:id="@+id/yas_ratingBarUpdateReview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="4dp"
            android:backgroundTint="@color/design_default_color_primary_variant"
            android:progressTint="#FF5722" />


        <TextView
            android:id="@+id/yas_searchText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="35dp"
            android:text="Review"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/yas_reviewUpdateText"
            android:layout_width="288dp"
            android:layout_height="115dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/round_border"
            android:inputType="textMultiLine"
            android:padding="14dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>







        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/yas_reviewUpdateText"
            android:orientation="horizontal">

            <Button
                android:id="@+id/yas_btnUpdateReview"
                android:layout_width="132dp"
                android:layout_height="47dp"

                android:layout_marginTop="20dp"
                android:layout_marginEnd="23dp"
                android:background="@drawable/yas_button"
                android:textSize="15dp"
                android:gravity="center"
                android:onClick="onClick"
                android:text="UPDATE"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/yas_btnDeleteReview"
                android:layout_width="132dp"
                android:layout_height="47dp"
                android:textSize="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="65dp"
                android:background="@drawable/yas_button"
                android:gravity="center"
                android:onClick="onClick"
                android:text="DELETE"
                android:textColor="@color/white" />


        </LinearLayout>



    </LinearLayout>




</LinearLayout>