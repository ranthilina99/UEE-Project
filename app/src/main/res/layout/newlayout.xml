<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="120dp"
    android:layout_height="230dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="20dp"
    android:id="@+id/newLayout_user">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="120dp"
        android:layout_height="220dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.013"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

       <androidx.cardview.widget.CardView
           android:id="@+id/card1"
           app:cardCornerRadius="10dp"
           android:layout_width="115dp"
           android:layout_height="105dp"
           android:layout_margin="10dp"
           android:orientation="vertical"
           tools:ignore="MissingConstraints">
           <ImageView
               android:id="@+id/card_view_image_new"
               android:layout_width="115dp"
               android:layout_height="105dp"
               android:layout_marginTop="4dp"
               android:scaleType="fitXY"
               android:foregroundGravity="center"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.25"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent" />

           <ImageView
               android:id="@+id/newTagImage"
               android:layout_width="44dp"
               android:layout_height="40dp"
               android:layout_marginLeft="70dp"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="1.0"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintVertical_bias="0.0"
               app:srcCompat="@drawable/new_label1" />

       </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/ratingBack"
            android:layout_width="30dp"
            android:layout_height="21dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.044"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.562"
            app:srcCompat="@drawable/ratingrectngale" />

        <ImageView
            android:id="@+id/ratingStar"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="3dp"
            app:layout_constraintEnd_toEndOf="@+id/ratingBack"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/ratingBack"
            app:layout_constraintTop_toTopOf="@+id/ratingBack"
            app:srcCompat="@drawable/star" />
        <TextView
            android:id="@+id/rating"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="12dp"
            android:text="4.9"
            android:textSize="9dp"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/ratingBack"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/ratingBack"
            app:layout_constraintTop_toTopOf="@+id/ratingBack" />

        <ImageButton
            android:id="@+id/heart"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.84"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.56"
            app:srcCompat="@drawable/ic_favorite_border_24px" />

        <TextView
            android:id="@+id/card_view_name_new"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:text="Product Name"
            android:textColor="@color/black"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card1" />

        <TextView
            android:id="@+id/card_view_price_new"
            android:layout_width="121dp"
            android:layout_height="23dp"
            android:gravity="center"
            android:text="Price"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_view_name_new"
            app:layout_constraintVertical_bias="0.0" />

        <!--        <RatingBar-->
<!--            android:id="@+id/smallRating"-->
<!--            style="?android:attr/ratingBarStyleSmall"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:numStars="5"-->
<!--            android:progressTint="#FFCC01"-->
<!--            android:rating="3"-->
<!--            app:layout_constraintBottom_toBottomOf="parent"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            app:layout_constraintHorizontal_bias="0.0"-->
<!--            app:layout_constraintStart_toStartOf="parent"-->
<!--            app:layout_constraintTop_toBottomOf="@+id/card_view_price_new"-->
<!--            app:layout_constraintVertical_bias="0.0" />-->

        <Button
            android:id="@+id/viewButton_new"
            android:layout_width="58dp"
            android:layout_height="29dp"
            android:background="@drawable/btn_round"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="view"
            android:textSize="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/BuyButton_new"
            android:layout_width="55dp"
            android:layout_height="29dp"
            android:background="@drawable/btn_round"
            android:textColor="@color/white"
            android:text="Buy"
            android:textSize="8dp"
            android:textStyle="bold"
            android:layout_marginRight="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.571"
            app:layout_constraintStart_toEndOf="@+id/viewButton_new" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>